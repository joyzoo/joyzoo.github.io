.header { 
  background: rgba($head-bg, 0.8); 
}

.header-inner { 
  position: relative; 
  margin: 0 auto;
  padding: 10px 0;
  width: $main-desktop;
  text-align: center
}

.site-meta {
  display: inline-block;
  vertical-align: top;
  margin: 0;
  text-align: $site-meta-text-align;

  +mobile() { text-align: center; }
}

.brand {
  position: relative;
  display: inline-block;
  padding: 0 25px;
  color: $brand-color;
  border-bottom: none;
  font-family: $brand-font-family;
}

.logo {
  display: inline-block;
  margin-right: 5px;
  width: 100px;
  height: 100px;
  vertical-align: top;
  background: url(/images/logo.gif);
}

.site-title {
  display: inline-block;
  vertical-align: top;
  font-size: 40px;
  font-weight: normal;
  margin-top: 30px;
}

.use-motion {
  .brand { opacity: 0; }

  .logo, .site-title {
    opacity: 0;
    position: relative;
    top: -10px;
  }
}

.site-nav {
  display: inline-block;
  vertical-align: top;
  +mobile() {
    display: none;
    margin: 0 -10px;
    padding: 0 10px;
    clear: both;
    border-top: 1px solid $gray-lighter;
  }
}


// Menu
// --------------------------------------------------
.menu {
  margin-top: 20px;
  padding-left: 0;
  text-align: center;
}

.menu .menu-item {
  display: inline-block;
  margin-left: 20px;
  @media screen and (max-width: 767px) {
    margin-top: 10px;
  }

  &:first-child { margin-left: 0; }

  a {
    display: block;
    font-size: 13px;
    text-transform: capitalize;
    line-height: 1.5;
    border-bottom: 1px solid $menu-link-border;
    transition-property: border-color;
    the-transition();

    &:hover { border-bottom-color: $menu-link-hover-border; }
  }
}
